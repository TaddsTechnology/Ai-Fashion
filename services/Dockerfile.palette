# Palette Service Dockerfile
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY services/requirements-palette.txt .
RUN pip install --no-cache-dir -r requirements-palette.txt

# Copy service files and dependencies
COPY services/palette_service.py .
COPY backend/prods_fastapi/database.py ./backend/prods_fastapi/
COPY backend/prods_fastapi/__init__.py ./backend/prods_fastapi/

# Create backend directory structure
RUN mkdir -p backend/prods_fastapi

# Expose port
EXPOSE 8002

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8002/health || exit 1

# Run the palette service
CMD ["python", "-m", "uvicorn", "palette_service:app", "--host", "0.0.0.0", "--port", "8002"]
